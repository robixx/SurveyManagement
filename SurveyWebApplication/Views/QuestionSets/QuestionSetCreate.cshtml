@model SurveyWebApplication.Models.QuestionSet

@{
    ViewBag.Title = "QuestionSetCreate";
}


<style>
    .cards {
        margin: 0 auto;
        display: -webkit-flex;
        display: flex;
        border-radius: 10px;
        /*-webkit-justify-content: center;
        justify-content: center;*/
        -webkit-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-top: 15px;
        padding: 1%;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    }

        .cards:hover {
            box-shadow: 0 4px 10px rgba(0,0,0,0.16), 0 4px 10px rgba(0,0,0,0.23);
        }
</style>





<div class="container-fluid mb-5">
    <div class="text-center mt-5">
        <h1> Question Set</h1>
    </div>
    <form id="fff" method="post">
        <div class="row">
            <div class="col-md-12">
                <div class=" cards " style="width: 80rem;">                   
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="name">Organization Name</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input class="easyui-combobox " name="Name" id="OrgName" data-options="valueField:'OrgId',textField:'Name',method:'Get', url:'OrganizationList/QuestionSets'" style="width: 275px; height: 35px;">
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-4">
                                        <label for="name"> Set Title</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input class="easyui-textbox " name="SetName" style="width: 275px; height: 35px;">
                                    </div>
                                </div>                              
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                
                            </div>
                            <div class="col-md-6">
                                <br /><button type="submit" class="easyui-linkbutton " style="width:80px">Submit</button>

                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


<script>
    debugger;
    $('#OrgName').combobox({
        prompt: 'Select Organization Name',
        valueField: 'OrgId',
        textField: 'Name',
        url: 'OrganizationList/QuestionSets',
        onLoadSuccess: function (list) {
            console.log(list);
        }
    });




    $('#fff').form('submit',
       {
           url: 'QuestionSetCreate/QuestionSets'


